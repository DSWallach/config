# FZF search
ctrlp() {
    zle reset-prompt
    print -z - $BUFFER $( find . -not -path '*/\.*' -nowarn 2>&1 | sed '/Permission denied/d;' | fzf --height 10)
    zle send-break
}

zle -N ctrlp
bindkey "^U" ctrlp

